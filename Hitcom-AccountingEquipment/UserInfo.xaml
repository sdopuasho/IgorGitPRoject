<UserControl x:Class="Hitcom_AccountingEquipment.UserInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hitcom_AccountingEquipment"
             mc:Ignorable="d" 
             d:DesignHeight="71" d:DesignWidth="250">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="45"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <Image Stretch="Uniform" x:Name="WorkerImage" Source="{Binding ImageByte}" Grid.RowSpan="2"/>
        <TextBlock x:Name="FioTxt" Text="{Binding FIOW}" Grid.Row="0" Grid.Column="1" />
        <TextBlock x:Name="PositionTxt" Text="{Binding PositionW}" Grid.Row="1" Grid.Column="1" />
        <Label Content="Выход" Grid.Row="1" Grid.Column="2" ButtonBase.Click="Label_Click"/>
    </Grid>
</UserControl>
